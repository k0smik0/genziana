		android:layout_height="wrap_content" android:text="Longitude: "/>	
	<TextView android:id="@+id/TextView02" android:layout_width="wrap_content" 
		android:layout_height="wrap_content" android:text="unknown"/>
	<TextView android:id="@+id/TextView03" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="Latitude: "/>	
	<TextView android:id="@+id/TextView04" android:layout_width="wrap_content" 
		android:layout_height="wrap_content" android:text="unknown"/>
	<Button android:text="@string/here_button_text" android:id="@+id/here_button"
		android:layout_width="wrap_content" android:layout_height="wrap_content" />
	<Button android:text="@string/list_button_text" android:id="@+id/list_button" 
		android:layout_width="wrap_content" android:layout_height="wrap_content" />
